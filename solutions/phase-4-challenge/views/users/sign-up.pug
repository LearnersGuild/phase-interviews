extends ../layouts/layout_plain

block title
  title Sign Up

block content
  .row
    h1.text-center Sign up for Vinyl

  form.form-horizontal(method='post' action='/users/sign-up')
    .form-group
      label.col-sm-offset-3.col-sm-2.control-label(for='name') Name
      .col-sm-3
        input.form-control(id='name' name='name' type='text' placeholder='Name')

    .form-group
      label.col-sm-offset-3.col-sm-2.control-label(for='email') Email
      .col-sm-3
        input.form-control(id='email' name='email' type='text' placeholder='Email')

    .form-group
      label.col-sm-offset-3.col-sm-2.control-label(for='password') Password
      .col-sm-3
        input.form-control(id='password' name='password' type='password' placeholder='Password')

    .form-group
      .col-sm-offset-5.col-sm-2
        button(type='submit' class='btn btn-default') Sign Up
