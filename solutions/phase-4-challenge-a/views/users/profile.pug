extends ../layouts/layout

include ../reviews/_review.pug

block title
  title Profile Page : #{user.name}

block content
  .row.profile
    .col-sm-3
      img(src='//via.placeholder.com/200x200')

    .col-sm-offset-1.col-sm-8
      h1= user.name

      dl.dl-horizontal
        dt Email
        dd= user.email

        dt Date Joined
        dd= new Date( user.joined_at ).toLocaleDateString()

      h2 Reviews

      each review in reviews 
        +albumReview(review)
      else
        p You have not submitted any reviews.